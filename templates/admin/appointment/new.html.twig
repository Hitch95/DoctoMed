{% extends 'admin/base.html.twig' %}

{% block title %}New Appointment{% endblock %}

{% block body %}
    <div class="container mx-auto py-8">
        <h1 class="text-2xl font-bold mb-6">Schedule New Appointment</h1>

        {{ form_start(form, {'attr': {'class': 'max-w-lg'}}) }}
        <div class="mb-4">
            {{ form_label(form.startAt, 'Appointment Date & Time', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
            {{ form_widget(form.startAt, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg'}}) }}
            {{ form_errors(form.startAt) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.doctor, 'Doctor', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
            {{ form_widget(form.doctor, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg'}}) }}
            {{ form_errors(form.doctor) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.skill, 'Specialty', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
            {{ form_widget(form.skill, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg'}}) }}
            {{ form_errors(form.skill) }}
        </div>

        <div class="grid grid-cols-2 gap-4">
            <div class="mb-4">
                {{ form_label(form.firstName, 'First Name', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.firstName, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg'}}) }}
                {{ form_errors(form.firstName) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.lastName, 'Last Name', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
                {{ form_widget(form.lastName, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg'}}) }}
                {{ form_errors(form.lastName) }}
            </div>
        </div>

        <div class="mb-4">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.phone, 'Phone Number', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
            {{ form_widget(form.phone, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg'}}) }}
            {{ form_errors(form.phone) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.healthcareCenter, 'Healthcare Center', {'label_attr': {'class': 'block text-gray-700 font-bold mb-2'}}) }}
            {{ form_widget(form.healthcareCenter, {'attr': {'class': 'w-full px-3 py-2 border rounded-lg'}}) }}
            {{ form_errors(form.healthcareCenter) }}
        </div>

        <div class="flex justify-between items-center">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Schedule Appointment
            </button>
            <a href="{{ path('app_admin_appointment_index') }}" class="text-gray-600 hover:text-gray-800">
                Back to list
            </a>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}