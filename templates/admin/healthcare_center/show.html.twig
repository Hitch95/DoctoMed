{% extends 'admin/base.html.twig' %}

{% block title %}Healthcare Center Details{% endblock %}

{% block body %}
    <div class="container mx-auto py-8">
        <div class="bg-white shadow-lg rounded-lg overflow-hidden">
            <div class="p-6">
                <div class="flex justify-between items-center mb-6">
                    <h1 class="text-2xl font-bold text-gray-800">{{ healthcare_center.name }}</h1>
                    <div class="space-x-3">
                        <a href="{{ path('app_admin_healthcare_center_index') }}"
                           class="inline-flex items-center px-4 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded-md">
                            Back to list
                        </a>
                        <a href="{{ path('app_admin_healthcare_center_edit', {'slug': healthcare_center.slug}) }}"
                           class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md">
                            Edit
                        </a>
                    </div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="space-y-4">
                        <h2 class="text-xl font-semibold text-gray-700 mb-4">Center Information</h2>
                        <div class="bg-gray-50 rounded-lg p-4">
                            <dl class="space-y-3">
                                <div class="flex">
                                    <dt class="w-1/3 font-medium text-gray-600">ID:</dt>
                                    <dd class="w-2/3 text-gray-800">{{ healthcare_center.id }}</dd>
                                </div>
                                <div class="flex">
                                    <dt class="w-1/3 font-medium text-gray-600">Slug:</dt>
                                    <dd class="w-2/3 text-gray-800">{{ healthcare_center.slug }}</dd>
                                </div>
                            </dl>
                        </div>

                        <h2 class="text-xl font-semibold text-gray-700 mb-4">Contact Information</h2>
                        <div class="bg-gray-50 rounded-lg p-4">
                            <dl class="space-y-3">
                                <div class="flex">
                                    <dt class="w-1/3 font-medium text-gray-600">Phone:</dt>
                                    <dd class="w-2/3 text-gray-800">{{ healthcare_center.phone }}</dd>
                                </div>
                                <div class="flex">
                                    <dt class="w-1/3 font-medium text-gray-600">Emergency:</dt>
                                    <dd class="w-2/3 text-gray-800">{{ healthcare_center.phoneEmergency }}</dd>
                                </div>
                                <div class="flex">
                                    <dt class="w-1/3 font-medium text-gray-600">Email:</dt>
                                    <dd class="w-2/3 text-gray-800">{{ healthcare_center.email }}</dd>
                                </div>
                            </dl>
                        </div>
                    </div>

                    <div>
                        <h2 class="text-xl font-semibold text-gray-700 mb-4">Associated Doctors</h2>
                        <div class="bg-gray-50 rounded-lg p-4">
                            {% if healthcare_center.doctors|length > 0 %}
                                <ul class="divide-y divide-gray-200">
                                    {% for doctor in healthcare_center.doctors %}
                                        <li class="py-3 flex items-center justify-between">
                                            <span class="text-gray-800">{{ doctor.firstName }} {{ doctor.lastName }}</span>
                                            <a href="{{ path('app_admin_doctor_show', {'id': doctor.id}) }}"
                                               class="text-blue-600 hover:text-blue-800">
                                                View Details
                                            </a>
                                        </li>
                                    {% endfor %}
                                </ul>
                            {% else %}
                                <p class="text-gray-500 italic">No doctors associated with this center</p>
                            {% endif %}
                        </div>
                    </div>
                </div>

                <div class="mt-8 border-t pt-4">
                    {{ include('admin/healthcare_center/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}